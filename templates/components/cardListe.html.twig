
<div class="card-container">
{% for article in articles %}
    <div class="card">
        <img src="{{ article.photo }}" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{article.title}}</h5>
            <p class="card-text">{{ article.description|slice(0, 400) ~ (article.description|length > 400 ? '...' : '') }}</p>
            <a href="{{ path("app_articles_detail", {'id': article.id}) }}" class="cardBtn btn-primary">Voir plus</a>
        </div>
    </div>
{% endfor %}
</div>