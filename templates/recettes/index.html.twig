{% extends 'base.html.twig' %}


{% block title %}Liste des recettes
{% endblock %}

{% block body %}

	{% set articlesWithIngredients = [] %}
	{% for article in articles %}
		{% if article.ingredients is not empty %}
			{% set articlesWithIngredients = articlesWithIngredients|merge([article]) %}
		{% endif %}
	{% endfor %}


	{% include "/components/cardListe.html.twig" with {'articles': articlesWithIngredients, 'routeName':  'app_recettes_detail'} %}


{% endblock %}
