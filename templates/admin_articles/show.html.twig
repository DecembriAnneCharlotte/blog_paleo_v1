{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ article.photo }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Ingredients</th>
                <td>{% for ingredient in article.ingredients %}
                        {{ ingredient.name }} {% if not loop.last %}, {% endif %}
                    {% endfor %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_articles_index') }}">back to list</a>

    <a href="{{ path('app_admin_articles_edit', {'id': article.id}) }}">edit</a>

    {{ include('admin_articles/_delete_form.html.twig') }}
{% endblock %}
