{% extends 'base.html.twig' %}


{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    {% set articlesWithoutIngredients = [] %}
    {% for article in articles %}
        {% if article.ingredients is empty %}
            {% set articlesWithoutIngredients = articlesWithoutIngredients|merge([article]) %}
        {% endif %}
    {% endfor %}

    {% include "/components/cardListe.html.twig" with {'articles': articlesWithoutIngredients, 'routeName':  'app_articles_detail'} %}
    

{% endblock %}
